<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_send_receiver"
        android:layout_width="200dp"
        android:scaleType="fitEnd"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/img_send" />



        <androidx.cardview.widget.CardView
            android:id="@+id/cv_avt_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_item_message_receiver"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/img_message_receiver"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/avt_user"
                android:src="@drawable/ic_avt" />
        </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time_item_message_receiver"
        android:textSize="11sp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@id/cv_avt_receiver"
        android:layout_alignBottom="@id/cv_avt_receiver"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_send_receiver"
        android:padding="5dp"
        android:id="@+id/linear_item_message_receiver"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/text_receiver_shape"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:maxWidth="200dp"
            android:id="@+id/tv_item_name_receiver"
            android:textColor="@color/Red"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_message_receiver"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
             />
    </LinearLayout>

</RelativeLayout>